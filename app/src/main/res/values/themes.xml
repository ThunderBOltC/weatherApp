<resources>
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <!-- AppBar Overlay Theme -->
    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <!-- You can customize attributes for your AppBar overlay here -->
        <!-- For example, if you want a light popup theme for the overflow menu -->
        <item name="popupTheme">@style/Theme.WeatherApp.PopupOverlay</item>
    </style>

    <!-- Optional: Popup Overlay Theme (for the overflow menu) -->
    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>
    